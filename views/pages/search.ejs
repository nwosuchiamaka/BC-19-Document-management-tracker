<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head.ejs %>
</head>
<body>
<header>
    <div class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button"
                        class="navbar-toggle"
                        data-toggle="collapse"
                        data-target=".navbar-responsive-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">DocTracker</a>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#"> Welcome <%= user.fullname%> </a>
                    </li>

                    <li>
                        <a href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <!--Welcome to dashboard < % = fullname % >-->
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Documents <small>Showing result for: <strong> <%= searchValue %> </strong></small></h3>
                    <ul id="document-lists">
                        <%  for(var i = 0; i < documents.length; i++){ %>
                        <li>
                            <a href="/view-document?id=<%= documents[i].id %>">
                                <i class="glyphicon glyphicon-file"></i>
                                <%= documents[i].title %>
                            </a>
                        </li>
                        <%}%>

                        <% if(documents.length < 1){ %>
                        <li class="text-center">
                            <strong>No document found!</strong>
                        </li>
                        <%}%>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<footer>
    <% include ../partials/footer.ejs %>
</footer>
</body>

</html>